
@{
    ViewBag.Title = "Danh sách lớp học";
    ViewBag.Main = "Danh sách lớp học";
    Layout = "~/Views/Shared/_LayoutArea.cshtml";
    NguoiDung uLogin = new NguoiDung().getNguoiDung(User.Claims.First().Value);
    LopHoc lopHoc = new LopHoc();
    List<LopHoc> roomQuest = lopHoc.searchLopHoc(uLogin.MaNd, ViewBag.Search);
}
@using DayHocTrucTuyen.Models.Entities
@model List<LopHoc>

<section>
    <div class="page-header">
        <div class="header-inner">
            <h2>Classroom</h2>
            <p>
                Chào mừng đến với trang web Dạy Học Trực Tuyến. Trang này hiển thị danh sách các lớp học bạn đã tham gia.
            </p>
        </div>
        <figure><img src="~/Content/Img/Resources/baner-forum.png" alt=""></figure>
    </div>
</section><!-- sub header -->
<section>
    <div class="gap gray-bg">
        <div class="container-fluid">
            <div class="row merged20">
                <div class="col-lg-9">
                    <div class="forum-warper">
                        <div class="central-meta">
                            <div class="title-block">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="align-left">
                                            <h5 class="create-post">Tìm kiếm lớp học</h5>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="row merged20">
                                            <div class="col-lg-12 col-md-12 col-sm-12">
                                                <form autocomplete="off" id="form-search-room">
                                                    <input autocomplete="off" autofocus id="mySearchCourses" name="mySearchCourses" type="text" placeholder="Nhập tên lớp..." value="@ViewBag.Search">
                                                    <button type="submit"><i class="fa fa-search"></i></button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div><!-- Search room-->
                    </div>
                    @if (ViewBag.Search != null)
                    {
                        <div class="forum-warper">
                            <div class="central-meta">
                                <div class="title-block">
                                    <div class="align-left">
                                        <h5 class="create-post">Kết quả tìm kiếm với từ khóa "@ViewBag.Search"</h5>
                                    </div>
                                </div>
                                @if (roomQuest.Count == 0)
                                {
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="text-center">
                                                <span>Không tìm thấy lớp học nào !</span>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="load-more">
                                        @foreach (var room in roomQuest)
                                        {
                                            <div class="central-meta item">
                                                <div class="pit-post">
                                                    <figure>
                                                        <img width="120" height="90" src="@room.getImage()" alt="" />
                                                    </figure>
                                                    <div class="pit-post-deta">
                                                        <h4><a href="~/courses/room/detail/@room.MaLop" title="@room.MaLop">@room.TenLop</a></h4>
                                                        <ul class="post-up-time">
                                                            @if (room.MoTa == null)
                                                            {
                                                                <li>Lớp chưa có giới thiệu !</li>
                                                            }
                                                            else
                                                            {
                                                                <li>@room.MoTa</li>
                                                            }
                                                            <li>
                                                                <div class="usr-fig">
                                                                    <img src="@room.getOwner().getImageAvt()" alt="" />
                                                                    <a href="~/profile/info/@room.MaNd" title="">@room.getOwner().getFullName()</a> là giáo viên
                                                                </div>
                                                            </li>
                                                            <li><i class="fa fa-clock-o"></i> @room.NgayTao.ToString("'Ngày' dd 'tháng' MM 'năm' yyyy")</li>
                                                        </ul>
                                                        <ul class="pit-opt">
                                                            <li class="like" title="Yêu thích"><i class="fa fa-heart"></i><em>@room.getSLCamXuc()</em></li>
                                                            <li class="class-post" title="Bài đăng"><i class="fa fa-comments"></i><em>@room.getSLPost()</em></li>
                                                            <li class="members" title="Thành viên"><i class="fa fa-group"></i><em>@room.getMembers()</em></li>
                                                            <li class="bad-report" title="Báo cáo"><i class="fa fa-flag"></i></li>
                                                            <li class="get-link" onclick="getLink('@room.MaLop')" title="Sao chép liên kết"><i class="fa fa-link"></i></li>
                                                        </ul>
                                                    </div>
                                                    <div class="right-pst-meta">
                                                        @foreach (var t in room.getTag())
                                                        {
                                                            <a title="Chủ đề của lớp">@t.TenTag</a>
                                                        }
                                                        <br />
                                                        <div class="users-thumb-list">
                                                            @{ int demMem = 0;}
                                                            @if (room.getMembers() == 0)
                                                            {<span>Chưa có thành viên nào !</span>}
                                                            else
                                                            {
                                                                foreach (var mem in room.listMembers())
                                                                {
                                                                    demMem++;
                                                                    if (demMem <= 5)
                                                                    {
                                                                        <a href="~/profile/info/@mem.MaNd" title="" data-toggle="tooltip" data-original-title="@mem.getFullName()">
                                                                            <img class="wh-40" src="@mem.getImageAvt()" alt="" />
                                                                        </a>
                                                                    }
                                                                }
                                                                if (demMem <= 5)
                                                                {<span> là thành viên</span>}
                                                                else
                                                                {<span><a title="@demMem người"> và @demMem</a> là thành viên</span>}
                                                        }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    }
