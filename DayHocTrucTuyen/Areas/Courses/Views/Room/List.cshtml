                                                                    }
                                                                }
                                                                if (demMem <= 5)
                                                                {<span> là thành viên</span>}
                                                                else
                                                                {<span><a title="@demMem người"> và @demMem</a> là thành viên</span>}
                                                        }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    <div class="forum-warper">
                        <div class="central-meta">
                            <div class="title-block">
                                <div class="align-left">
                                    <h5 class="create-post">Lớp bạn đã tham gia</h5>
                                </div>
                            </div>
                            @if (uLogin.getListJoin().Count == 0)
                            {
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="text-center">
                                            <span>Bạn chưa tham gia lớp học nào !</span>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="load-more-room-join">
                                    @foreach (var room in uLogin.getListJoin())
                                    {
                                        <div class="central-meta item">
                                            <div class="pit-post">
                                                <figure>
                                                    <img width="120" height="90" src="@room.getImage()" alt="" />
                                                </figure>
                                                <div class="pit-post-deta">
                                                    <h4><a href="~/courses/room/detail/@room.MaLop" title="@room.MaLop">@room.TenLop</a></h4>
                                                    <ul class="post-up-time">
                                                        @if (room.MoTa == null)
                                                        {
                                                            <li>Lớp chưa có giới thiệu !</li>
                                                        }
                                                        else
                                                        {
                                                            <li>@room.MoTa</li>
                                                        }
                                                        <li>
                                                            <div class="usr-fig">
                                                                <img src="@room.getOwner().getImageAvt()" alt="" />
                                                                <a href="~/profile/info/@room.MaNd" title="">@room.getOwner().getFullName()</a> là giáo viên
                                                            </div>
                                                        </li>
                                                        <li><i class="fa fa-clock-o"></i> @room.NgayTao.ToString("'Ngày' dd 'tháng' MM 'năm' yyyy")</li>
